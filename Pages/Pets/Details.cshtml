@page
@model PetAdoptions.Pages.Pets.DetailsModel
@{
    ViewData["Title"] = "Pet Details";
}

<!-- Page title. -->
<h1>Pet Details</h1>

<!-- List of pet details. -->
<div>
    <dl class="row">

        <!-- Pet name. -->
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Pet!.Name</dd>

        <!-- Pet species. -->
        <dt class="col-sm-2">Species</dt>
        <dd class="col-sm-10">@Model.Pet.Species</dd>

        <!-- Pet breed. -->
        <dt class="col-sm-2">Breed</dt>
        <dd class="col-sm-10">@Model.Pet.Breed</dd>

        <!-- Pet age. -->
        <dt class="col-sm-2">Age</dt>
        <dd class="col-sm-10">@Model.Pet.Age</dd>

        <!-- Pet adoption status. -->
        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">@Model.Pet.Status</dd>

        <!-- Pet intake date. -->
        <dt class="col-sm-2">Intake Date</dt>
        <dd class="col-sm-10">@Model.Pet.IntakeDate.ToShortDateString()</dd>

        <!-- Pet adopter. -->
        <dt class="col-sm-2">Adopter</dt>
        <dd class="col-sm-10">
            @(Model.Pet.Adopter != null ? Model.Pet.Adopter.FirstName + " " + Model.Pet.Adopter.LastName : "")
        </dd>

    </dl>

    <!-- Edit and back to list buttons. -->
    <a asp-page="Edit" asp-route-id="@Model.Pet.PetId" class="btn btn-primary">Edit</a>
    <a asp-page="Index" class="btn btn-secondary">Back to List</a>
</div>