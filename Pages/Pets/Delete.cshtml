@page
@model PetAdoptions.Pages.Pets.DeleteModel
@{
    ViewData["Title"] = "Delete Pet";
}

<!-- Page title. -->
<h1>Delete Pet</h1>

<!-- Confirmation message -->
<h3>Are you sure you want to delete this pet?</h3>

<!-- Pet details. -->
<div>
    <dl class="row">
        <!-- Pet name. -->
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Pet!.Name</dd>

        <!-- Pet species. -->
        <dt class="col-sm-2">Species</dt>
        <dd class="col-sm-10">@Model.Pet.Species</dd>

        <!-- Pet breed. -->
        <dt class="col-sm-2">Breed</dt>
        <dd class="col-sm-10">@Model.Pet.Breed</dd>

        <!-- Pet age. -->
        <dt class="col-sm-2">Age</dt>
        <dd class="col-sm-10">@Model.Pet.Age</dd>

        <!-- Pet adoption status. -->
        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">@Model.Pet.Status</dd>

        <!-- Pet adopter. Blank if not yet adopted. -->
        <dt class="col-sm-2">Adopter</dt>
        <dd class="col-sm-10">
            @(Model.Pet.Adopter != null ? Model.Pet.Adopter.FirstName + " " + Model.Pet.Adopter.LastName : "")
        </dd>
    </dl>

    <!-- Form to confirm pet deletion. Hides ID. -->
    <form method="post">
        <input type="hidden" asp-for="Pet.PetId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-page="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
