@page
@model PetAdoptions.Pages.Adopters.DetailsModel
@{
    ViewData["Title"] = "Adopter Details";
}

<h1>Adopter Details</h1>

<dl class="row">
    <dt class="col-sm-2">Name</dt>
    <dd class="col-sm-10">@Model.Adopter!.FirstName @Model.Adopter.LastName</dd>

    <dt class="col-sm-2">Phone</dt>
    <dd class="col-sm-10">@Model.Adopter.Phone</dd>

    <dt class="col-sm-2">Email</dt>
    <dd class="col-sm-10">@Model.Adopter.Email</dd>
</dl>

<h3>Pets Adopted</h3>
@if (Model.Adopter.Pets != null && Model.Adopter.Pets.Count > 0)
{
    <ul>
        @foreach (var pet in Model.Adopter.Pets)
        {
            <li>@pet.Name (@pet.Species)</li>
        }
    </ul>
}
else
{
    <p>No pets adopted yet.</p>
}

<a asp-page="Edit" asp-route-id="@Model.Adopter.AdopterId" class="btn btn-primary">Edit</a>
<a asp-page="Index" class="btn btn-secondary">Back</a>
