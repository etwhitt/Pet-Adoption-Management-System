@page
@model PetAdoptions.Pages.Adopters.DeleteModel
@{
    ViewData["Title"] = "Delete Adopter";
}

<h1>Delete Adopter</h1>

<h3>Are you sure you want to delete this adopter?</h3>

<dl class="row">
    <dt class="col-sm-2">Name</dt>
    <dd class="col-sm-10">@Model.Adopter!.FirstName @Model.Adopter.LastName</dd>

    <dt class="col-sm-2">Phone</dt>
    <dd class="col-sm-10">@Model.Adopter.Phone</dd>

    <dt class="col-sm-2">Email</dt>
    <dd class="col-sm-10">@Model.Adopter.Email</dd>
</dl>

@if (Model.Adopter.Pets.Count > 0)
{
    <div class="alert alert-danger">
        This adopter cannot be deleted because they are associated with pets.
    </div>
}

<form method="post">
    <input type="hidden" asp-for="Adopter.AdopterId" />

    <button type="submit" class="btn btn-danger"
            @(Model.Adopter.Pets.Count > 0 ? "disabled" : "")>
        Delete
    </button>

    <a asp-page="Index" class="btn btn-secondary">Cancel</a>
</form>
