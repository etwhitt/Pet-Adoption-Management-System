@page
@model PetAdoptions.Pages.Adopters.IndexModel
@{
    ViewData["Title"] = "Adopters";
}

<!-- Title. -->
<h1>Adopters</h1>

<!-- Search form. -->
<form method="get" class="mb-3">
    <div class="input-group">
        <input type="text" name="SearchString" class="form-control"
               placeholder="Search by name, phone, or email" value="@Model.SearchString" />
        <button class="btn btn-primary" type="submit">Search</button>
    </div>
</form>

<!-- Table of adopters. -->
<table class="table table-striped">
    <thead>
        <tr>
            <th>
                <a asp-page="./Index" asp-route-SortField="FirstName" asp-route-SortOrder="@(Model.SortField == "FirstName" && Model.SortOrder == "asc" ? "desc" : "asc")" asp-route-SearchString="@Model.SearchString">First Name</a>
            </th>
            <th>
                <a asp-page="./Index" asp-route-SortField="LastName" asp-route-SortOrder="@(Model.SortField == "LastName" && Model.SortOrder == "asc" ? "desc" : "asc")" asp-route-SearchString="@Model.SearchString">Last Name</a>
            </th>
            <th>
                <a asp-page="./Index" asp-route-SortField="Phone" asp-route-SortOrder="@(Model.SortField == "Phone" && Model.SortOrder == "asc" ? "desc" : "asc")" asp-route-SearchString="@Model.SearchString">Phone</a>
            </th>
            <th>
                <a asp-page="./Index" asp-route-SortField="Email" asp-route-SortOrder="@(Model.SortField == "Email" && Model.SortOrder == "asc" ? "desc" : "asc")" asp-route-SearchString="@Model.SearchString">Email</a>
            </th>
            <th></th>
        </tr>
    </thead>

    <!-- Loops through and displays adopters/their information for current page. -->
    <tbody>
        @foreach (var a in Model.Adopters)
        {
            <tr>
                <td>@a.FirstName</td>
                <td>@a.LastName</td>
                <td>@a.Phone</td>
                <td>@a.Email</td>
                <td>
                    <a asp-page="/Adopters/Edit" asp-route-id="@a.AdopterId" class="btn btn-sm btn-primary">Edit</a>
                    <a asp-page="/Adopters/Details" asp-route-id="@a.AdopterId" class="btn btn-sm btn-primary">Details</a>
                    <a asp-page="/Adopters/Delete" asp-route-id="@a.AdopterId" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Pagination and buttons for navigation. -->
<nav>
    <ul class="pagination">
        <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
            <a class="page-link" asp-page="./Index" asp-route-pageNumber="@(Model.CurrentPage - 1)" asp-route-SearchString="@Model.SearchString" asp-route-SortField="@Model.SortField" asp-route-SortOrder="@Model.SortOrder">Previous</a>
        </li>

        @for (int i = 1; i <= Model.TotalPages; i++)
        {
            <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                <a class="page-link" asp-page="./Index" asp-route-pageNumber="@i" asp-route-SearchString="@Model.SearchString" asp-route-SortField="@Model.SortField" asp-route-SortOrder="@Model.SortOrder">@i</a>
            </li>
        }

        <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
            <a class="page-link" asp-page="./Index" asp-route-pageNumber="@(Model.CurrentPage + 1)" asp-route-SearchString="@Model.SearchString" asp-route-SortField="@Model.SortField" asp-route-SortOrder="@Model.SortOrder">Next</a>
        </li>
    </ul>
</nav>